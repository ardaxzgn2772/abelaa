<body>
    <h1>認証へようこそ！</h1>
    <button class="button" onclick="showNotification()">認証</button>
    <div class="notification" id="notification">認証完了！</div>

    <script>
        function showNotification() {
            const notification = document.getElementById('notification');
            notification.style.display = 'block';
            
            // 2秒後に「認証完了！」を非表示にして、次のページにリダイレクト
            setTimeout(() => {
                notification.style.display = 'none';
                window.location.href = "success.html"; // 次のページに飛ぶ
            }, 2000); // 2秒後にリダイレクト
        }
    </script>
